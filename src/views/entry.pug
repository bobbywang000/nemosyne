doctype html
html
  head
    meta(charset='utf-8')
    style
        include css/base.css
        include css/entry.css
  body

  include header.pug

  h3
    a(href=prev) prev
    | &nbsp;
    a(href=next) next

  each entry in entries
    h2
      a(href=entry.link) #{entry.subjectDate} (written #{entry.writeDate})
    h4
      a(href=entry.editLink) Edit
      | &nbsp;
      a(href=entry.deleteLink) Delete
    | Ranges:

    ul
      each range in entry.parentRanges
        if range.linkParams
          li #{range.name}
            | &nbsp;
            a(href="/entries" + range.linkParams) Entry View
            | &nbsp;
            a(href="/dates" + range.linkParams) Range View
        else
          li #{range.name}
    | !{ entry.content }
